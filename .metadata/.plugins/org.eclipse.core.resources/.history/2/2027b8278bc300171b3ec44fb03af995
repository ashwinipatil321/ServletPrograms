<script type="text/javascript">
	$(document).ready(function() {
		$("#name").blur(function() {
			var name = $("#name").val();
			var nameRegex = /^[a-zA-Z ]*$/;
			if (name.length == 0) {
				$("#error1").text("Please Enter name");
			} else if (!name.match(nameRegex)) {
				$("#error1").text("Please Enter charcter only");
			} else {
				$("#error1").text("");
			}
		});
	});
</script>
